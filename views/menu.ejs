<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Menu</title>
    </head>
    <body>
        <!-- Exercise 2: -->
        <%- include('./partials/nav') %>

        <h1>Full Menu</h1>

        <!-- Excercise 2: Menu -->
        <h2>Mains</h2>
        <% menu.forEach(item => { if (item.category === 'mains') { %>
            <div>
                <h3><%= item.name %> - $<%= item.price.toFixed(2) %></h3>
                <p>Rating: <%= item.rating %>/5</p>
                <p><%= item.details %></p>
            </div>
        <% }}); %>

        <h2>Desserts</h2>
        <% menu.forEach(item => { if (item.category === 'desserts') { %>
            <div>
                <h3><%= item.name %> - $<%= item.price.toFixed(2) %></h3>
                <p>Rating: <%= item.rating %>/5</p>
                <p><%= item.details %></p>
            </div>
        <% }}); %>

        <h2>Sides</h2>
        <% menu.forEach(item => { if (item.category === 'sides') { %>
            <div>
                <h3><%= item.name %> - $<%= item.price.toFixed(2) %></h3>
                <p>Rating: <%= item.rating %>/5</p>
                <p><%= item.details %></p>
            </div>
        <% }}); %>
        
    </body>
</html>
